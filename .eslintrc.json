{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google",
        "plugin:vue/vue3-essential"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "max-len": [
            "error",
            {
                "code": 100
            }
        ],
        "indent": ["error", 3],
        "require-jsdoc": "off",
        "valid-jsdoc": "off"
    },
    "overrides": [
        {
          "files": ["*.vue"],
          "rules": {
            "vue/script-indent": ["error", 3],
            "vue/html-indent": ["error", 3]
          }
        }
      ]
}